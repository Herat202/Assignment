<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    @*This tag ensures that the browser renders the page at the correct width and scale for mobile devices*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your Photo Gallery</title>

    @* For styling: I define my own under wwwroot folder: *@
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <script src="~/js/my_scripts.js"></script> 
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="header">
        <div class="brand">
            <a href="/" style="color: inherit; text-decoration: none;">Your Photo Gallery</a>
        </div>
        <div class="nav">
            <a href="/">Home</a>
            <a href="/About">About</a>
            <a href="/Privacy">Privacy</a>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer">
        &copy; @DateTime.Now.Year - Your Photo Gallery - <a href="/Contact">Contact</a>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
